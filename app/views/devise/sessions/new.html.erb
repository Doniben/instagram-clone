<%#= render "devise/shared/links" %>

<section class="container mx-auto py-4 xl:px-48 lg:px-20 mt-6">
  <div class="flex justify-center pt-32">
    <div class="mobile xl:block lg:block md:hidden sm:hidden w-96">
      <div class="relative">
        <%= image_tag("mobile.png", alt: "") %>
        <div class="absolute mobile-view">
          <%= image_tag("mobile-view.jpg", alt: "") %>
        </div>
      </div>
    </div>
    <div class="xl:w-1/3 lg:w-2/5 md:w-2/4 sm:w-full py-1">
      <div class="mt-8 py-8 px-12 h-96 bg-white border border-1 border-gray-300">
        <div>
          <div class="w-40 mx-auto">
            <%= image_tag("instagram.png", alt: "") %>
          </div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="py-2 mt-6">
              <%= f.text_field :email, autofocus: true, placeholder: "Email or Username", class: "bg-gray-50 py-2 px-4 w-full border border-1 border-gray-300 outline-none text-xs", required: "true" %>
            </div>

            <div class="pb-4">
              <%= f.password_field :password, placeholder: "Password", class: "bg-gray-50 py-2 px-4 w-full border border-1 border-gray-300 outline-none text-xs", required: "true" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="py-2">
              <%= f.submit "Log in", class: "py-1.5 px-4 w-full rounded text-center text-sm bg-blue-400 font-bold text-white cursor-pointer" %>
            </div>
          <% end %>
        </div>
        <div class="pt-2 flex items-center">
          <div class="w-40 border-t border-gray-300"></div>
          <div class="px-4 text-gray-400 font-bold text-xs">OR</div>
          <div class="w-40 border-t border-gray-300"></div>
        </div>
        <button class="mt-6 py-0.5 px-4 bg-blue-400 w-full border-0 rounded outline-none flex items-center justify-center mx-auto">
          <i class="fa fa-facebook-square text-xl text-blue-600 mr-2"></i>
          <a href="#" class="font-semibold text-sm text-white">Log in with facebook</a>
        </button>
        <div class="text-center pt-2">
          <a href="#" class="text-xs text-blue-600 text-center">Forgot password?</a>
        </div>
      </div>
      <div class="my-2 py-5 px-6 h-16 bg-white border border-1 border-gray-300">
        <p class="text-sm flex justify-center">Don't have an account? 
          <%= link_to "Sign up", new_registration_path(resource_name), class: "ml-2 text-blue-500 font-semibold" %>
        </p>
      </div>
    </div>
  </div>
  <%= render 'layouts/footer' %>
</section>
